{
  "name": "draw",
  "version": "0.0.1",
  "description": "A lightweight generative art library inspired by p5js and ptsjs.",
  "main": "/dist/draw.min.js",
  "scripts": {
    "dev": "webpack --watch --config config/webpack.dev.js --progress --colors",
    "build": "webpack --config config/webpack.prod.js --progress --colors && npm run modules",
    "modules": "tsc -d && npm run bundle-typings",
    "bundle-typings": "dts-bundle --name pts --outputAsModuleFolder true --main dist/modules/**/*.d.ts --out ../draw.d.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lacoooo/draw.git"
  },
  "author": "N",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lacoooo/draw/issues"
  },
  "homepage": "https://github.com/lacoooo/draw#readme",
  "devDependencies": {
    "dts-bundle": "^0.7.3",
    "dts-bundle-webpack": "^1.0.2",
    "terser-webpack-plugin": "^3.0.6",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  }
}
